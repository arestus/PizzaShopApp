@model PizzaOrderingSystemWebMVC.Models.PizzaDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Orders</title>
</head>
<body>

    <h4>PizzaDetail</h4>
    <hr />
    <div class="text-center">
        <h1 class="display-4">  Piiza Name : @ViewBag.Name </h1>
        <h1 class="display-4">
            Pizza Price   @ViewBag.Price
        </h1>
        <h1 class="display-4"> pizza type   @ViewBag.Type </h1>


        <h1 class="display-4"> Topping :   @ViewBag.Topping </h1>

        <h1 class="display-4"> Topping :   @ViewBag.Price </h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Orders">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PizzaName"></label>
                    <p>    @ViewBag.Name </p>
                    <input asp-for="PizzaName" />
                    <span asp-validation-for="PizzaName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PizzaPrice"></label>
                    @ViewBag.Price
                    <input asp-for="PizzaPrice" />
                    <span asp-validation-for="PizzaPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PizzaType"></label>


                    <input asp-for="PizzaType" />
                    <span asp-validation-for="PizzaType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
