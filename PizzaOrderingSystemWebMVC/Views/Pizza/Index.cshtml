@model IEnumerable<PizzaOrderingSystemWebMVC.Models.PizzaDetail>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container">
    <h1 class="text-center">
        Chose your pizza
    </h1>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="/Images/Pizzas/@(item.PizzaName).jpeg" class="card-img-top" alt="..." style="height: 230px;">
                    <div class="card-body">

                        <h5 class="card-title text-center">@item.PizzaName</h5>

                        <h6 class="card-text">Prise $@item.PizzaPrice</h6>
                        <h6 class="card-text">@item.PizzaType</h6>

                        <p class="card-text">Some pizza descriptions on the card title and make up the bulk of the card's content.</p>
                        <a asp-action="Details" asp-route-id="@item.PizzaNumber" class="btn btn-success text-center w-100">Buy</a>

                        @*@Html.ActionLink("Buy", "Index", "Topping", new { pizza = item });*@
                    </div>
                </div>
            </div>
        }
    </div>





</div>
