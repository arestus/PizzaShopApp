@model PizzaOrderingSystemWebMVC.Models.UserLoginDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserLogin</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/UserLogin.css" />
</head>
<body>

    
    <img src="~/Images/Firstimage.jpg" />
    <div class="row">
        <header> SIGN-IN</header>
        <div class="col-md-4">
            <form asp-action="UserLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                   @* <label asp-for="UserMail" class="control-label"></label>*@
                    <span class="fa fa-user"></span>
                    <input asp-for="UserMail" class="form-control" required placeholder="Email-Addres"/>
                    <span asp-validation-for="UserMail" class="text-danger"></span>
                </div>

                <div class="form-group space">
                    @*<label asp-for="UserPassword" class="control-label"></label>*@
                    <span class="fa fa-lock"></span>
                    <input asp-for="UserPassword" class="form-control" required placeholder="Password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <div>

                </div>

                <div class="form-group space">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <br />
                <br />
                <br />

                <div class="signup">Don't have account?<a href="http://localhost:63039/User/UserRegistration">Signup Now</a>

                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
